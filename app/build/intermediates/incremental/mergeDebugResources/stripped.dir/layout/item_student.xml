<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:textDirection="ltr">


    <LinearLayout
        android:paddingStart="@dimen/marginBtnView"
        android:paddingEnd="@dimen/marginBtnView"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding"
        android:id="@+id/ll_Student"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/margin20"
                android:layout_marginStart="@dimen/margin20"
                android:src="@drawable/img_user" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress"
                android:layout_width="@dimen/iconMiniHeight"
                android:layout_height="@dimen/iconMiniHeight"
                android:layout_centerInParent="true"
                android:visibility="visible"
                app:indicatorColor="@color/colorAccent" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                tools:text="maya kheiri kronz"
                style="@style/NormalTextViewStyle"
                android:padding="3dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_student_email"
                style="@style/NormalTextViewStyle"
                android:text="m.kh.kronz@gmail.com"
                android:textSize="@dimen/small_text_size"
                android:padding="3dp"
                android:textColor="@color/black" />

            <View
                android:layout_marginTop="@dimen/padding"
                android:layout_marginBottom="@dimen/smallMargin"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/grey" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>