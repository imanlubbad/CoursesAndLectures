    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/button_padding</item>

        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button_a</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/paddingText</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TitleTextViewStyle" parent="TextViewStyle">
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <style name="NormalTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>


    <style name="SmallTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/textSizeMini</item>
    </style>

    <style name="NumberPickerStyle">
        <!--        <item name="android:textSize">22dp</item>-->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
</resources>